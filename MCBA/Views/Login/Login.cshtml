@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<section class="h-screen">
    <div class="container px-6 py-12 h-full">
        <div class="flex justify-center items-center flex-wrap h-full g-6 text-base-content">
            <div class="md:w-8/12 lg:w-6/12 mb-12 md:mb-0">
                @* src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" *@
                <img src="/images/loginImage01Pink.svg" class="w-full" alt="Login page image" />
            </div>
            <div class="md:w-8/12 lg:w-5/12 lg:ml-20">
                <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-300">
                    <div class="card-body" asp-action="Login">
                        <h3 class="text-2xl font-bold text-center">Login to MCBA</h3>
                        <form asp-action="Login"
                              asp-controller="Login"
                              method="post">
                            <div asp-validation-for="ModelOnly" class="text-error"></div>
                            <div class="form-group mb-6">
                                <label asp-for=@Model.LoginID
                                       class="block mb-2 text-sm font-medium text-base-content">LoginID</label>
                                <input asp-for=@Model.LoginID
                                       class="text-primary form-control input-bordered input-primary w-full max-w-xs"
                                       type="text"
                                       placeholder="Login ID"
                                       autofocus />
                            </div>
                            <div class="form-group mb-6">
                                <label asp-for=@Model.Password
                                       class="block mb-2 text-sm font-medium text-base-content">Password</label>
                                <input asp-for=@Model.Password
                                       class="text-primary form-control input-bordered input-primary w-full max-w-xs"
                                       type="password"
                                       placeholder="Password" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                            @Html.ValidationMessage("WrongCredentials", new { @class = "text-error" })
                            @Html.ValidationMessage("Frozen", new { @class = "text-error" })
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
