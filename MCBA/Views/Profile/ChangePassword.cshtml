@model LoginViewModel
@{
    ViewData["Title"] = "Edit Password";
}
<div class="mt-10 sm:mt-0">
    <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
            <div class="px-4 sm:px-0">
                <h3 class="text-xl font-medium leading-6 text-primary">Change Password</h3>
                <p class="mt-1 text-m text-base-content">
                    Push the <span class="text-primary uppercase">Save</span> button, when you're done.
                </p>
            </div>
        </div>
        <div class="mt-5 md:mt-0 md:col-span-2">
            <form asp-controller="Profile"
                  asp-action="ChangePassword"
                  asp-route-loginID=@Model.LoginID
                  asp-route-customerID=@Model.CustomerID
                  class="mb-6">
                <div asp-validation-summary="ModelOnly"
                     class="text-error"></div>
                <input type="hidden" asp-for="LoginID" />
                <div class="shadow-2xl overflow-hidden sm:rounded-md">
                    <div class="px-4 py-5 bg-base-100 sm:p-6">
                        <div class="grid grid-cols-6 gap-6">
                            <div class="col-span-6 sm:col-span-3">
                                <div class="form-group">
                                    <label asp-for=@Model.Password
                                           class="block mb-2 text-sm font-medium text-base-content">
                                    </label>
                                    <input asp-for=@Model.Password
                                           type="password"
                                           class="text-primary form-control input-bordered input-primary w-full max-w-xs" />
                                    <span asp-validation-for=@Model.Password
                                          class="text-error">
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="grid grid-cols-6 gap-6">
                    <div class="col-start-1 col-span-1">
                        <div class="mt-6 m-6">
                            <input type="submit"
                                   class="btn btn-primary"
                                   value="Save" />
                        </div>
                    </div>
                    <div class="col-end-7 col-span-1">
                        <div class="mt-6 m-6">
                            <a asp-controller="Profile"
                               asp-action="ProfileView">
                                <input type="button"
                                       class="btn btn-secondary"
                                       value="Back to Profile" />
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>